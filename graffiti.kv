<MainFrame>:
  
    StackLayout:
        id: "sys_buttons"
        padding: 10
        spacing: 10
        size_hint: 0.15, 1
        canvas:
            Color:
                rgb: 0.5, 0.5, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
 
        Button:
            id: new_btn
            size_hint: 1, 0.1
            text: "New"
 
        Button:
            id: save_btn
            size_hint: 1, 0.1
            text: "Save"
 
    BoxLayout:
        orientation: "vertical"
 
        GraffitiBackground:
            size_hint: 1, 0.9
            canvas:
                Color:
                    rgb: 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
                
            Graffiti:
            	canvas:
					Color:                	
                		rgb: 1, 0, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos
 
        StackLayout:
            size_hint: 1, 0.1
            canvas:
                Color:
                    rgb: 0.5, 0.5, 0.5
                Rectangle:
                    size: self.size
                    pos: self.pos